<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--    bottom sheet dialog fragment的视图背景透明-->
    <style name="AppBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!--    MD的圆角 family-->
    <style name="RoundedCorner4dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--    MD的圆角 family-->
    <style name="RoundedCorner9dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9dp</item>
    </style>

    <!--    dialog fragment的视图动画-->
    <style name="DialogFragmentWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/anim_alpha_out</item>
    </style>


</resources>