<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_loading"
        android:layout_width="80dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_loading" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/boston_black"
        android:text="@string/loading"
        android:textColor="#ff495052"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/lottie_view_loading"
        app:layout_constraintStart_toStartOf="@+id/lottie_view_loading"
        app:layout_constraintTop_toBottomOf="@+id/lottie_view_loading" />

</androidx.constraintlayout.widget.ConstraintLayout>